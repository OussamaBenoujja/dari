{
  "name": "darna-frontend",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo containing Darna and Tirelire React apps plus a shared UI kit.",
  "type": "module",
  "scripts": {
    "dev:darna": "pnpm --filter @darna/darna-app dev",
    "dev:tirelire": "pnpm --filter @darna/tirelire-app dev",
    "dev": "pnpm -r --parallel --stream dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
  "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.23.0"
}
